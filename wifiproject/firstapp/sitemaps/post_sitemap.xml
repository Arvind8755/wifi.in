{% load l10n %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  <!-- custom template active -->
  {% for url in urlset %}
  <url>
    <loc>{{ url.location }}</loc>
    {% if url.lastmod %}<lastmod>{{ url.lastmod|date:"c" }}</lastmod>{% endif %}
    {% if url.changefreq %}<changefreq>{{ url.changefreq }}</changefreq>{% endif %}
    {% if url.priority %}<priority>{{ url.priority|floatformat }}</priority>{% endif %}

    {# सीधे object से image पढ़ें #}
    {% if url.item.image %}
      <image:image>
        <image:loc>{{ protocol }}://{{ site.domain }}{{ url.item.image.url }}</image:loc>
        {% if url.item.image_alt %}<image:caption>{{ url.item.image_alt|escape }}</image:caption>{% endif %}
      </image:image>
    {% endif %}
  </url>
  {% endfor %}
</urlset>
